<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="userName"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/rose_poudre">

        <!-- Welcome text -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text='@{"Welcome, " + userName + "!"}'
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/cupcake_pink"
            android:gravity="center"
            android:padding="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- "Don't miss our sales" in French -->
        <TextView
            android:id="@+id/tvSales"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/ne_ratez_pas_nos_promotions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/cupcake_pink"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <!-- On-Sale Products RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvOnSaleProducts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:clipToPadding="false"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvSales"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/pastry_item"/>


        <!-- Floating Action Button for Cart
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_shopping_cart"
            app:backgroundTint="@color/cupcake_pink"
            app:tint="@color/white"
            app:layout_constraintBottom_toTopOf="@id/footer_container"
            app:layout_constraintEnd_toEndOf="parent" />
            -->
        <!-- Bottom Navigation View -->
        <FrameLayout
            android:id="@+id/footer_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>