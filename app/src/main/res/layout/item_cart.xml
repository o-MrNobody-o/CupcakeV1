<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cart_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <!-- Pastry Image -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="12dp"
        app:strokeWidth="0dp">

        <ImageView
            android:id="@+id/ivCartItemImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/capcafe"
            android:contentDescription="Pastry Image" />
    </com.google.android.material.card.MaterialCardView>


    <!-- Info & Controls -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <!-- Pastry Name -->
        <TextView
            android:id="@+id/tvCartItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pastry Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/cupcake_pink_dark" />

        <!-- Pastry Price -->
        <TextView
            android:id="@+id/tvCartItemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3.50 TND"
            android:textSize="14sp"
            android:textColor="@color/cupcake_pink"
            android:paddingTop="2dp" />

        <!-- Quantity & Remove Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:gravity="center_vertical">

            <!-- Decrease Button -->
            <Button
                android:id="@+id/btnDecrease"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:textSize="18sp"
                android:padding="0dp"
                android:backgroundTint="@color/cupcake_pink"
                android:textColor="@android:color/white" />

            <!-- Quantity Text -->
            <TextView
                android:id="@+id/tvCartItemQuantity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="1"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:background="@drawable/quantity_background"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <!-- Increase Button -->
            <Button
                android:id="@+id/btnIncrease"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:textSize="18sp"
                android:padding="0dp"
                android:backgroundTint="@color/cupcake_pink"
                android:textColor="@android:color/white" />

            <!-- Remove Button -->
            <Button
                android:id="@+id/btnRemove"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Remove"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:backgroundTint="@android:color/holo_red_light"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
