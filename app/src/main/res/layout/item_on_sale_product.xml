<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.App.CardView"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    app:strokeColor="@color/cupcake_pink_light"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Pastry Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/pastry_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
            tools:src="@tools:sample/avatars" />

        <!-- Pastry Name -->
        <TextView
            android:id="@+id/pastry_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/cupcake_pink_dark"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/pastry_image"
            app:layout_constraintTop_toTopOf="@id/pastry_image"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Cupcake au chocolat" />

        <!-- Price -->
        <TextView
            android:id="@+id/pastry_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/cupcake_pink_dark"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/pastry_name"
            app:layout_constraintTop_toBottomOf="@id/pastry_name"
            tools:text="3.50 TND" />

        <!-- Availability -->
        <TextView
            android:id="@+id/pastry_availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:textAppearance="?attr/textAppearanceBody2"
            app:drawableStartCompat="@drawable/ic_baseline_check_circle_24"
            app:layout_constraintStart_toStartOf="@id/pastry_price"
            app:layout_constraintTop_toBottomOf="@id/pastry_price"
            tools:text="Disponible"
            tools:textColor="@color/green" />

        <!-- Promotion Badge -->
        <TextView
            android:id="@+id/pastry_promotion_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/promo_badge_background"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:rotation="-10"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/pastry_image"
            app:layout_constraintEnd_toEndOf="@id/pastry_image"
            tools:text="-20%"
            tools:visibility="visible" />

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/action_buttons_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/pastry_availability"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"> <!-- fix: bottom anchor -->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_to_cart_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ajouter_au_panier"
                android:layout_marginEnd="8dp"
                app:backgroundTint="@color/cupcake_pink_light"
                android:textColor="@color/cupcake_pink_dark" />

            <Button
                android:id="@+id/detail_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d_tails"
                android:textColor="@color/cupcake_pink_dark" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
